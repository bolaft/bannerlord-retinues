<!--       Troop Row       -->
<!-- ━━━━━━━━━━━━━━━━━━━━━ -->

<!-- Image -->
{{ image.image(
    is_visible="@IsTroop",
    width="68", height="48",
    x_offset="-20"
) }}

<!-- Formation Class Icon -->
{{ image.sprite(
    sprite="@FormationClassIcon",
    width="24", height="24",
    margin_right="12"
) }}

<!-- Name -->
{{ text.base(
    text="@NameText",
    width_policy="StretchToParent",
) }}

<!-- Tier Icon -->
<ImageWidget
    DataSource="{TierIconData}"
    WidthSizePolicy="Fixed"
    HeightSizePolicy="Fixed"
    SuggestedWidth="24"
    SuggestedHeight="24"
    MarginRight="12"
    Sprite="@Text"
    HorizontalAlignment="Right"
    VerticalAlignment="Center"/>
